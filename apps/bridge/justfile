# Bridge (Discord↔IRC↔XMPP) - loaded via root: mod bridge './apps/bridge'

default:
    @just --list

lint:
    uv run ruff check src tests

format:
    uv run ruff format src tests

typecheck:
    uv run basedpyright

test *args:
    uv run pytest tests {{args}}

check:
    uv run ruff check src tests
    uv run ruff format src tests
    uv run basedpyright
    uv run pytest tests -q
